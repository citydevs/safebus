<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondos"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="25dp" >

        <TextView
             android:id="@+id/instrucciones_pag_3_tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:text="@string/paginas_instrucciones_titulo_3"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
             android:id="@+id/instrucciones_pag_3_tv_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="@string/paginas_instrucciones_texto_pag_3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/instrucciones_pag_3_tv_tel_inmujeres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/tel_inmujeres"
            android:textColor="@color/color_vivos"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/instrucciones_pag_3_im_inmujer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|right"
            android:src="@drawable/inmujer" />
    </LinearLayout>

</LinearLayout>