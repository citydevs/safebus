<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondos"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:drawableRight="@drawable/ic_launcher_name"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="@string/paginas_instrucciones_titulo"
        android:textStyle="bold" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_dialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/instrucciones_btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/saefubus_siguiente" />
    </LinearLayout>

</LinearLayout>